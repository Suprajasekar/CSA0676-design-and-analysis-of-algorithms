def average_value_of_even_divisible_by_three(nums):
    # Filter the numbers that are even and divisible by 3
    filtered_nums = [num for num in nums if num % 2 == 0 and num % 3 == 0]
    
    # Calculate the sum and count of the filtered numbers
    total_sum = sum(filtered_nums)
    count = len(filtered_nums)
    
    # Calculate the average, rounded down
    if count == 0:
        return 0
    else:
        return total_sum // count

# Example usage:
nums = [1, 3, 6, 10, 12, 15]
print(average_value_of_even_divisible_by_three(nums))  # Output: 9
