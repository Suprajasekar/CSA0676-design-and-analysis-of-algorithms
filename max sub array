def maxSubArray(nums):
    # Initialize current sum and maximum sum with the first element of the array
    current_sum = max_sum = nums[0]

    # Iterate through the array starting from the second element
    for num in nums[1:]:
        # Update the current sum by either starting a new subarray at the current element
        # or by adding the current element to the existing subarray
        current_sum = max(num, current_sum + num)
        # Update the maximum sum found so far
        max_sum = max(max_sum, current_sum)

    return max_sum

# Example usage
nums = [-2, 1, -3, 4, -1, 2, 1, -5, 4]
print(maxSubArray(nums))
