def convert(s, numRows):
    if numRows == 1 or numRows >= len(s):
        return s

    # Initialize a list of empty strings for all rows
    rows = [''] * numRows
    current_row = 0
    going_down = False

    # Traverse the string and append characters to the appropriate row
    for char in s:
        rows[current_row] += char
        if current_row == 0 or current_row == numRows - 1:
            going_down = not going_down  # Change direction
        current_row += 1 if going_down else -1

    # Combine rows to get the final result
    return ''.join(rows)

# Example usage:
s = "PAYPALISHIRING"
numRows = 3
print(convert(s, numRows))  # Output: "PAHNAPLSIIGYIR"

s = "PAYPALISHIRING"
numRows = 4
print(convert(s, numRows))  # Output: "PINALSIGYAHRPI"
