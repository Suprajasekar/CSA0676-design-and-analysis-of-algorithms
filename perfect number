def sum_of_divisors(n, i=1):
    # Base case: if i is greater than n // 2, stop the recursion
    if i > n // 2:
        return 0
    # If i is a divisor of n, add it to the sum and recur with the next i
    if n % i == 0:
        return i + sum_of_divisors(n, i + 1)
    else:
        return sum_of_divisors(n, i + 1)

def is_perfect_number(n):
    # A perfect number is equal to the sum of its proper divisors
    return n == sum_of_divisors(n)

# Example usage
number = 28
if is_perfect_number(number):
    print(f"{number} is a perfect number")
else:
    print(f"{number} is not a perfect number")
